<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
    }
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #333;
      color: #fff;
      padding: 10px;
    }
    .nav_left {
      display: flex;
      align-items: center;
    }
    .nav_right {
      display: flex;
      align-items: center;
    }
    .nav_right img {
      width: 40px;
      height: 40px;
      border-radius: 25%;
      margin-right: 10px;
      border-style: solid;
      border-color: #fff;
    }
    .nav_right #username {
      color: #fff;
      font-size: 18px;
      margin-right: 20px;
      background-color: none;
      border-bottom: 1px solid white;
      
    }
    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
    }
    nav li {
      margin-right: 20px;
    }
    nav a {
      color: #fff;
      text-decoration: none;
    }
    h1 {
      font-size: 36px;
      margin-top: 50px;
      text-align: center;
    }
  
    .container {
      display: flex;
    }
  
    .task-list {
      flex: 1;
      margin: 20px;
    }
  
    .task-list h2 {
      text-align: center;
    }
  
    .task-form {
      flex: 1;
      margin: 20px;
    }
  
    .task-form h2 {
      text-align: center;
    }
  
    #inputdiv {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }
  
    input,
    select,
    button {
      margin-left: 10px;
      padding: 10px;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  
    button.del-btn {
      margin-left: 10px;
      padding: 10px;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  
    #todo-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #fff;
    }
  
    .todo-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px;
      margin-top: 10px;
      margin-bottom: 10px;
      background-color: #9f9a9a;
      border-radius: 5px;
      border: 2px solid #333;
      box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
      width: 100%;
      align-content: center;
    }
  
    .status-label {
      text-decoration: none;
    }
  </style>
  
  <nav>
    <div class="nav_left">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/todo">Todo</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
    <div class="nav_right">
      <img src="<%= pic %>" alt="propic" id="pica">
      <% if (user) { %>
        <span id="username"><%= user %> ji</span>
      <% } %>
      <a href="/logout">Logout</a>
    </div>
  </nav>